<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= number_to_currency product.price %></td>
    <td><%= link_to "Edit", edit_product_path(product), remote: true, class: "btn btn-warning btn-block" %></td>
    <td><%= link_to "Delete", product_delete_path(product), remote: true, class: "btn btn-danger btn-block" %></td>
  </tr>
<% end %>

